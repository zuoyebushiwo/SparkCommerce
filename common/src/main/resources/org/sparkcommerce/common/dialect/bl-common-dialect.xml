<dialect xmlns="http://www.thymeleaf.org/extras/dialect"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.thymeleaf.org/extras/dialect
                             http://www.thymeleaf.org/xsd/thymeleaf-extras-dialect-2.1.xsd"
         prefix="blc"
         namespace-uri="http://www.sparkcommerce.com"
         class="org.sparkcommerce.common.web.dialect.SCDialect">

    <element-processor name="config" class="org.sparkcommerce.common.web.processor.ConfigVariableProcessor" />
    <element-processor name="enumeration" class="org.sparkcommerce.common.web.processor.DataDrivenEnumerationProcessor" />
    <element-processor name="bundle" class="org.sparkcommerce.common.web.processor.ResourceBundleProcessor" />
    
    <expression-object name="props" class="org.sparkcommerce.common.web.expression.PropertiesVariableExpression" />
    <expression-object name="brc" class="org.sparkcommerce.common.web.expression.BRCVariableExpression" />
    
</dialect>